class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        
        maxSeq = 0
        curr = 1
        # order it
        nums.sort()

        for i in range(1,len(nums)):
            if nums[i] == nums[i-1]+1:
                curr +=1
                maxSeq = max(curr, maxSeq)
            else:
                curr=1
        return maxSeq
        
